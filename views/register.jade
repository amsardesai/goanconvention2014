extends main-layout

block head
	-var title = "Registration - Goan Convention 2014";
	-var bodyClass = "register"
	-var description = "Registration for the 2014 Goan Convention is now closed. Thank you to all the people that registered!"
	script(type='text/javascript', src='//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
	script(type='text/javascript', src='/javascripts/waypoints.min.js')
	script(type='text/javascript', src='/javascripts/register.js')

block content
	section.container
		h1 REGISTRATION
		.instructions <strong>Registration is now closed.</strong> Thank you to all the people that registered! 
		hr
		.registrants-head
			i.fa.fa-globe 
			| Who's Coming So Far?
		.registrants-count #{count} people in #{families.length} families
		a.registrants-map(href="http://mapofgoans.ankitsardesai.ca/convention2014",target="_blank") View Map of Attendees
		//googleoff: all
		.registrants
			each family in families
				.family
					.lastname= family.last
					.city #{family.city}, #{family.state}
					.guests  &mdash; #{family.first}
						each guest in family.guests
							| , #{guest}
		//googleon: all