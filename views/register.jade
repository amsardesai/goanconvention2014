extends main-layout

block head
	-var title = "Register - Goan Convention 2014";
	-var bodyClass = "register"

block content
	section.container
		.head REGISTRATION
		.white-block
			h1 
				i.fa.fa-info-circle
				| Early Bird Registration Prices
			table
				tbody
					tr
						td.left Adult Regular (age 23 and over)
						td.right US $172
					tr
						td.left Adult Student (age 18 to 22)
						td.right US $142
					tr
						td.left Child (age 6 to 17)
						td.right US $112
					tr
						td.left Child (age 5 and under)
						td.right Free
			.note Prices are subject to change.
		a.white-block.register-now(href="") 
			i.fa.fa-check-circle
			| Official Registration Page
		.instructions Click on the button above to go to the official registration page of the 2014 Goan Convention. 